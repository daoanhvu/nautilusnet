{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/I${fileDirname}\\include",
                "/I${fileDirname}\\..\\libs",
                "/Link",
                "kernel32.lib",
                "/Link",
                "user32.lib",
                "/Link",
                "gdi32.lib",
                "/Link",
                "shell32.lib",
                "/Link",
                "opengl32.lib",
                "/Link",
                "${fileDirname}\\..\\libs\\glfw3.lib",
                "/LIBPATH:\"${fileDirname}\\..\\libs\"",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}